<div class="teste-color" id="<%= dom_id @produto %>">
  <div class="">
    <%= link_to "Back to produtos", produtos_path, class: 'btn btn-primary' %>
    <%= link_to "Favoritos", favoritos_path, class: 'btn btn-primary ' %>
  </div>
  <p class="nome-produto">
    <strong>Nome:</strong>
    <%= @produto.nome_produto %>
  </p>

  <p>
    <strong>Categoria:</strong>
    <%= @produto.categoria %>
  </p>

  <p>
    <strong>Preço:</strong>
    <%= @produto.preco %>
  </p>

  <p>
    <strong>Imagem:</strong>
    <% if @produto.image_url.present? %>
      <%= image_tag @produto.image_url, size: "100x100" %>
    <% else %>
      <p>Imagem não disponível</p>
    <% end %>
  </p>

  <strong>Localização:</strong>
  <% @produto.produtos_precos.each do |produto_preco| %>
    <p>Supermercado: <%= produto_preco.supermercado.nome_mercado %></p>
    <p>Localização: <%= produto_preco.supermercado.localizacao %></p>
    <p>Preço: <%= number_to_currency(produto_preco.preco) %></p>
  <% end %>

</div>

<p style="color: green"><%= notice %></p>


<div>
  <% if can? :edit, @produto %>
      <%= link_to "Edit this produto", edit_produto_path(@produto) %>
  <% end %>


  <%= button_to "Adicionar aos Favoritos", add_to_favoritos_favorito_path(@produto.id), method: :post, class: 'btn btn-primary m-1' %>
  <%= button_to 'Adicionar ao Carrinho', adicionar_ao_carrinho_path(@produto), method: :post, class: 'btn btn-primary m-1' %>
</div>
